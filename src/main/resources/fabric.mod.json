{
  "schemaVersion": 1,
  "id": "wardenloot",
  "version": "${version}",

  "name": "Warden Loot",
  "description": "A configurable fabric mod that adds very powerful (and very hard to get) weapons and armor, themed around the Warden and the Ancient City",
  "authors": [
    "nu11une"
  ],
  "contact": {
    "sources": "https://github.com/nu11une/wardenloot",
    "website": "https://www.curseforge.com/minecraft/mc-mods/warden-loot",
    "issues": "https://github.com/nu11une/wardenloot/issues"
  },

  "license": "Apache-2.0",
  "icon": "assets/wardenloot/textures/item/sculk_chestplate.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.nu11une.wardenloot.WardenLoot"
    ]
  },
  "mixins": [
    "wardenloot.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
