{
  "schemaVersion": 1,
  "id": "wardenloot",
  "version": "${version}",

  "name": "Warden Loot",
  "description": "A configurable fabric mod that adds very powerful (and very hard to get) weapons and armor, themed around the Warden and the Ancient City",
  "authors": [
    "nu11une"
  ],
  "contact": {
    "sources": "https://github.com/nu11une/wardenloot",
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/warden-loot",
    "issues": "https://github.com/nu11une/wardenloot/issues"
  },

  "license": "Apache-2.0",
  "icon": "assets/wardenloot/textures/wardenloot_icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.nu11une.wardenloot.WardenLoot"
    ],
    "client": [
      "net.nu11une.wardenloot.client.WardenLootClient"
    ],
    "modmenu": [
      "net.nu11une.wardenloot.compatibility.ModMenu"
    ]
  },
  "mixins": [
    "wardenloot.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": ">=1.19",
    "java": ">=17",
    "moremcmeta": ">=1.19-3.0.3",
    "cloth-config2": ">=7.0.72"
  },
  "suggests": {
    "trinkets": ">=3.4.0",
    "modmenu": ">=4.0.0"
  }
}
